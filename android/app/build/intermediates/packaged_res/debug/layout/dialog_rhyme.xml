<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/classical_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推荐韵脚"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/classical_text"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 搜索框 -->
    <EditText
        android:id="@+id/etRhymeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入一个字、词或句子"
        android:textColor="@color/classical_text"
        android:textColorHint="@color/classical_text"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- 韵脚结果显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推荐韵脚字："
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/classical_text"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvRhymeResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="韵脚字将在此显示"
            android:textColor="@color/classical_text"
            android:textSize="16sp" />
    </ScrollView>

    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/btnCloseRhyme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textColor="@color/white"
        android:backgroundTint="@color/classical_accent" />

</LinearLayout>