<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/classical_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API 申请指南"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/classical_text"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 指南内容显示区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvGuideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:textColor="@color/classical_text"
            android:textSize="16sp" />
    </ScrollView>

    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/btnCloseGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textColor="@color/white"
        android:backgroundTint="@color/classical_accent" />

</LinearLayout>