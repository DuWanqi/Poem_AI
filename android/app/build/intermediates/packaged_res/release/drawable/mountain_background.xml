<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 米黄色背景 -->
    <item>
        <color android:color="@color/classical_background" />
    </item>
    
    <!-- 远山 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#1A4A6B48"
                android:centerColor="#004A6B48"
                android:endColor="#004A6B48"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 中景山 -->
    <item android:top="100dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#333A5F3A"
                android:centerColor="#003A5F3A"
                android:endColor="#003A5F3A"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 近景山 -->
    <item android:top="160dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#4D2D4F2D"
                android:centerColor="#002D4F2D"
                android:endColor="#002D4F2D"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 水面倒影 -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#33556B2F"
                android:centerColor="#00556B2F"
                android:endColor="#00556B2F"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 装饰性云彩 -->
    <item android:top="40dp" android:left="20dp">
        <shape android:shape="oval">
            <solid android:color="#1AFFFFFF" />
            <size android:width="60dp" android:height="30dp" />
        </shape>
    </item>
    
    <item android:top="60dp" android:right="40dp">
        <shape android:shape="oval">
            <solid android:color="#1AFFFFFF" />
            <size android:width="80dp" android:height="40dp" />
        </shape>
    </item>
    
    <item android:top="50dp" android:left="150dp">
        <shape android:shape="oval">
            <solid android:color="#1AFFFFFF" />
            <size android:width="50dp" android:height="25dp" />
        </shape>
    </item>
</layer-list>