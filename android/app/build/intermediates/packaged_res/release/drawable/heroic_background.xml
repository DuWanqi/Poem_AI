<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5DC" /> <!-- 米黄色背景 -->
        </shape>
    </item>
    
    <!-- 水墨骏马装饰 -->
    <item 
        android:top="20dp"
        android:right="20dp"
        android:width="100dp"
        android:height="80dp">
        <vector
            android:width="100dp"
            android:height="80dp"
            android:viewportWidth="100"
            android:viewportHeight="80">
            <!-- 马身 -->
            <path
                android:fillColor="#3B8D6F"
                android:pathData="M30,40 Q50,30 70,40 Q65,50 50,55 Q35,50 30,40 Z" />
            <!-- 马头 -->
            <path
                android:fillColor="#3B8D6F"
                android:pathData="M70,40 Q80,35 85,40 Q80,45 70,45 Z" />
            <!-- 马腿 -->
            <path
                android:strokeWidth="2"
                android:strokeColor="#3B8D6F"
                android:pathData="M40,55 L40,70" />
            <path
                android:strokeWidth="2"
                android:strokeColor="#3B8D6F"
                android:pathData="M50,55 L50,70" />
            <path
                android:strokeWidth="2"
                android:strokeColor="#3B8D6F"
                android:pathData="M60,55 L60,70" />
            <!-- 马尾 -->
            <path
                android:strokeWidth="3"
                android:strokeColor="#3B8D6F"
                android:pathData="M30,45 Q20,40 15,50" />
        </vector>
    </item>
    
    <!-- 宝剑装饰 -->
    <item 
        android:bottom="20dp"
        android:left="20dp"
        android:width="100dp"
        android:height="40dp">
        <vector
            android:width="100dp"
            android:height="40dp"
            android:viewportWidth="100"
            android:viewportHeight="40">
            <!-- 剑身 -->
            <path
                android:fillColor="#D4A345"
                android:pathData="M10,20 L80,20 L80,25 L10,25 Z" />
            <!-- 剑柄 -->
            <path
                android:fillColor="#8B0000"
                android:pathData="M80,15 L90,15 L90,30 L80,30 Z" />
            <!-- 剑穗 -->
            <path
                android:strokeWidth="1"
                android:strokeColor="#FFD700"
                android:pathData="M90,22 Q95,20 95,25 Q90,23 95,27" />
        </vector>
    </item>
</layer-list>