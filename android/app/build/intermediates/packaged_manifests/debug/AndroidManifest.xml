<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poemai"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.poemai.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.PoemAI" > <!-- 确认此处引用正确 -->
        <activity
            android:name="com.example.poemai.LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.PoemAI.Classical" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.poemai.MainActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.LoginActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <!-- 添加 RegisterActivity 的声明 -->
        <activity
            android:name="com.example.poemai.RegisterActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.CardCreateActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.CiPaiRecommendActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.PoemDisplayActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.WorkDisplayActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity android:name="com.example.poemai.PoemComposeActivity" />
    </application>

</manifest>