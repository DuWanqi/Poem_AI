<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poemai"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name="com.example.poemai.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.PoemAI" >
        <activity
            android:name="com.example.poemai.LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.PoemAI.Classical" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.poemai.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.CardCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.CiPaiRecommendActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.PoemDisplayActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.WorkDisplayActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.PoemComposeActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.CardGenerateActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name="com.example.poemai.GalleryActivity"
            android:exported="false"
            android:theme="@style/Theme.PoemAI.Classical" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.poemai.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>