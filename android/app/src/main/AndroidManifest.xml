<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poemai">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoemAI"
        android:networkSecurityConfig="@xml/network_security_config"> <!-- 确认此处引用正确 -->
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.PoemAI.Classical">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <!-- 添加 RegisterActivity 的声明 -->
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name=".CardCreateActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name=".CiPaiRecommendActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name=".PoemDisplayActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity
            android:name=".WorkDisplayActivity"
            android:theme="@style/Theme.PoemAI.Classical" />
        <activity android:name=".PoemComposeActivity" />
    </application>

</manifest>